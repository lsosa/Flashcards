<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:id="@+id/flashcardParentView"
    android:gravity="center_vertical"
    android:layout_height="match_parent" >
    
    <TextView
        android:id="@+id/keyword"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:paddingTop="6dp"
        android:paddingLeft="6dp"
        android:textSize="25sp"
        android:text="KeyWord"
        android:textStyle="bold" />
    
    <TextView
        android:id="@+id/definition"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:paddingTop="16dp"
        android:paddingLeft="56dp"
        android:layout_below="@id/keyword"
        android:textSize="15sp"
        android:text="The best definitiong ever :) Lorem ipsum dolor sit amet, consectetur adipisicing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua. Ut enim ad minim veniam, "
        android:textStyle="bold" />
    

</RelativeLayout>
